<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.androidtown.myapplication.FeedbackActivity"
    tools:showIn="@layout/activity_feedback">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/back"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#9fa3d9f1"
            android:padding="10dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_habitTitle"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:text="title"
                android:textSize="40dp" />

            <ImageView
                android:id="@+id/user_imageLoad"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:src="@color/black_overlay" />

            <TableLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:background="#00ffffff"
                android:stretchColumns="*">

                <TableRow>
                    <TextView
                        android:id="@+id/user_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="25dp" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:id="@+id/user_writeDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="15dp" />
                </TableRow>

                <TableRow>
                    <RatingBar
                        android:id="@+id/user_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:isIndicator="true"
                        android:layout_gravity="center" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:id="@+id/user_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:layout_marginBottom="10dp"
                        android:textSize="20dp" />
                </TableRow>


                <TableRow>
                    <TextView
                        android:text="피드백"
                        android:textSize="20dp"
                        android:layout_marginTop="50dp"
                        android:textStyle="bold"
                        android:gravity="center"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:id="@+id/feedback_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="25dp" />
                </TableRow>

                <TableRow>
                    <RatingBar
                        android:id="@+id/feedback_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:isIndicator="true"
                        android:layout_gravity="center" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:id="@+id/feedback_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:textSize="20dp" />
                </TableRow>
            </TableLayout>

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
