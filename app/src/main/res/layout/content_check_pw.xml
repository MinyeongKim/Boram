<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.androidtown.myapplication.CheckPWActivity"
    tools:showIn="@layout/activity_check_pw">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/back">

    <TableLayout
        android:id="@+id/loginTable"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="#9fa3d9f1"
        android:stretchColumns="*"
        android:layout_centerHorizontal="true">

        <TableRow>
            <TextView
                android:text="본인 확인을 위해 비밀번호를 입력해주세요"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_span="2"
                android:layout_gravity="center"/>
        </TableRow>

        <TableRow>
            <TextView android:text="PW"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="30dp"
                android:layout_height="wrap_content"/>

            <EditText
                android:layout_width="100dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:id="@+id/loginPw"
                android:inputType="textPassword"/>
        </TableRow>

        <TableRow>
            <Button
                android:id="@+id/checkPW"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_span="2"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:background="@drawable/button"
                android:textColor="#969595"
                android:textSize="20dp"
                android:text="확인" />
        </TableRow>

    </TableLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
